@using Domain.Core.App.Requests.Entity;
@using Domain.Core.App.Cars.Entity;
@model List<Request>

<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered table-sm ">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Licance Plate</th>
                <th scope="col">Car Model</th>
                <th scope="col">National Code</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Address</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var request in @Model)
            {
                <tr>
                    <th scope="row">@request.Id</th>
                    <td>@request.Plate</td>
                    <td>@request.Car.Model</td>
                    <td>@request.NationalCode</td>
                    <td>@request.PhoneNumber</td>
                    <td>@request.Address</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Opprators" asp-action="Approve" asp-route-id="@request.Id">Approve</a>
                        <a class="btn btn-danger" asp-controller="Opprators" asp-action="Disapprove" asp-route-id="@request.Id">Disapprove</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

