@using Domain.Core.App.Requests.Entity;
@using Domain.Core.App.Cars.Entity;
@model List<Request>


<hr />
<H1>Past Requests</H1>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered table-sm ">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Licance Plate</th>
                <th scope="col">Car Model</th>
                <th scope="col">National Code</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Address</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var request in @Model)
            {
                <tr>
                    <th scope="row">@request.Id</th>
                    <td>@request.Plate</td>
                    <td>@request.Car.Model</td>
                    <td>@request.NationalCode</td>
                    <td>@request.PhoneNumber</td>
                    <td>@request.Address</td>
                    @{
                        if (request.RequestDay == null)
                        {
                            <td>--</td>
                        }
                        else
                        {
                            <td>@request.RequestDay</td>
                        }
                    }
                    @{   
                    if (request.RequestDay == null)
                    {
                            <td>Approved</td>
                    }
                    else
                    {
                    <td>Approved</td>
                    }
                    }
                </tr>
            }
        </tbody>

    </table>
</div>

