@using Domain.Core.App.Cars.Entity;
@model List<Car>;

@{
    ViewData["Title"] = "Login";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["AlertType"] alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container">
    <h2 class="text-center mb-4">Add Car</h2>
    <form method="post" asp-action="AddCar" asp-controller="UserCars">
        <div class="mb-3">

            <label for="Plate" class="form-label">Plate</label>
            <input type="text" class="form-control" name="Plate" id="Plate" placeholder="Enter your Plate" required>
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">Car</label>
            <select name="Car" id="inputState" class="form-control">
                @foreach(var car in @Model)
                {
                    <option value="@car.Id" selected>@car.Model</option>
                }
                

            </select>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>